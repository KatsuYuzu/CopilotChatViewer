<Window x:Class="CopilotChatViewer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:CopilotChatViewer.Views"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="GitHub Copilot Chat Viewer for VS Code" Height="600" Width="900"
        Icon="/app.ico">
    <Window.Resources>
        <views:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <views:UserBgConverter x:Key="UserBgConverter"/>
        <views:AlignConverter x:Key="AlignConverter"/>
        <views:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- 左ペイン：履歴一覧 -->
        <Border Padding="8,8,0,8" Background="{DynamicResource ControlFillColorDefaultBrush}" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <!-- 検索ボックスとボタン -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="KeyDown">
                                <i:InvokeCommandAction Command="{Binding SearchOnEnterKeyCommand}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <Button Grid.Column="2"
                            Command="{Binding SearchOrClearCommand}"
                            ToolTip="{Binding SearchButtonToolTip}"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding SearchButtonIcon}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <ProgressBar IsIndeterminate="True"
                             Visibility="{Binding IsLoadingHistories, Converter={StaticResource BoolToVisibilityConverter}}"
                             HorizontalAlignment="Center" VerticalAlignment="Center" Height="8" Margin="8" />
                    <ListView ItemsSource="{Binding Histories}" SelectedItem="{Binding SelectedHistory, Mode=TwoWay}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding IsLoadingHistories, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=False}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding FirstMessageDisplay}" FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap" />
                                    <TextBlock Text="{Binding TimestampDisplay}" FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Border>
        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      ShowsPreview="True"
                      Background="{DynamicResource ControlFillColorTertiaryBrush}"/>
        <!-- 右ペイン：選択セッションのメッセージ表示 -->
        <Border Grid.Column="2" Padding="8"
                Background="{DynamicResource ControlFillColorSecondaryBrush}">
            <Grid Visibility="{Binding SelectedHistory, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Button
                        Command="{Binding CopyMessagesToClipboardCommand}"
                        ToolTip="コピー"
                        Padding="4,2"
                        Margin="0,0,0,8"
                        FontSize="18"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <TextBlock x:Name="CopyIconTextBlock"
                                   Text="{Binding CopyButtonIcon, NotifyOnTargetUpdated=True}"
                                   Opacity="1">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0" />
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             To="1" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                    </Button>
                </Grid>
                <Grid Grid.Row="1">
                    <ListView x:Name="MessagesListView" ItemsSource="{Binding Messages}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.CanContentScroll="False"
                        Focusable="False" MaxWidth="1000">
                        <i:Interaction.Behaviors>
                            <views:ScrollToTopBehavior TargetValue="{Binding SelectedHistory}" />
                            <views:LoadMoreOnScrollBehavior />
                        </i:Interaction.Behaviors>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel VirtualizingPanel.ScrollUnit="Pixel"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Copilot（AI）発言：左寄せ -->
                                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Visibility="{Binding IsCopilotOrError, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Icon}" FontSize="24" Margin="0,0,8,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                    <Border Grid.Column="1" Background="{Binding Type, Converter={StaticResource UserBgConverter}}" CornerRadius="12" Padding="12" Margin="4" HorizontalAlignment="{Binding IsUser, Converter={StaticResource AlignConverter}}">
                                        <TextBox Text="{Binding Content, Mode=OneWay}" TextWrapping="Wrap" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="{DynamicResource TextFillColorDarkPrimaryBrush}"/>
                                    </Border>
                                    <!-- ユーザー発言：右寄せ -->
                                    <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top" Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Icon}" FontSize="24" Margin="8,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
